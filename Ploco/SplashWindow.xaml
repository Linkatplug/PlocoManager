<Window x:Class="Ploco.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Démarrage de Ploco" Height="450" Width="800"
        WindowStyle="None" WindowStartupLocation="CenterScreen" 
        AllowsTransparency="True" Background="Transparent"
        Topmost="True">
    
    <Border CornerRadius="8" Background="#1E1E1E" ClipToBounds="True">
        <Grid>
            <!-- Image de fond -->
            <Image Source="pack://application:,,,/img/splash.png" Stretch="UniformToFill" />
            
            <!-- Dégradé pour lisibilité du texte en bas -->
            <Border VerticalAlignment="Bottom" Height="100">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="Transparent" Offset="0"/>
                        <GradientStop Color="#CC000000" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            
            <!-- Contenu dynamique -->
            <StackPanel VerticalAlignment="Bottom" Margin="20,0,20,20">
                <TextBlock x:Name="TxtVersion" Text="Version 1.0" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,5"/>
                <TextBlock x:Name="TxtStatus" Text="Initialisation..." Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                
                <ProgressBar x:Name="PbLoading" Height="4" Minimum="0" Maximum="100" Value="0" 
                             BorderThickness="0" Background="#33FFFFFF" Foreground="#007ACC" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
